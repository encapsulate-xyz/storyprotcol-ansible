[Unit]
Description=Story execution

[Service]
User={{ service_identifier }}
Group={{ service_identifier }}
EnvironmentFile={{ execution_env_dir }}/normal_env_var
WorkingDirectory={{ execution_data_dir }}
ExecStart={{ execution_bin_dir }}/{{ service_identifier }} --{{ vars[project][type][client].chain_id }}
Restart=always
RestartSec=4
LimitNOFILE=65536
StandardOutput=append:{{ execution_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target